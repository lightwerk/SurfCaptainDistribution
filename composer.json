{
   "name": "lightwerk/surfcaptaindistribution",
      "description" : "Lightwerk SurfCaptain Distribution",
      "license": "LGPL-3.0+",
      "repositories": [
         {
            "type": "composer",
            "url": "http://ci.typo3.robertlemke.net/job/composer-packages/ws/repository/"
         },
			{  
				"type": "vcs",
				"url": "git://git.typo3.org/Packages/TYPO3.SwiftMailer.git"
			},
         {
            "type": "vcs",
            "url": "git@bitbucket.org:lars85/lightwerk.surfcaptain.git"
         },
         {
            "type": "vcs",
            "url": "git@bitbucket.org:lars85/lightwerk.surfclasses.git"
         },
         {
            "type": "vcs",
            "url": "git@bitbucket.org:lars85/lightwerk.surfrunner.git"
         }
      ],
      "config": {
         "vendor-dir": "Packages/Libraries",
         "bin-dir": "bin"
      },
      "require": {
         "typo3/flow": "2.0.*",
			"typo3/swiftmailer": "dev-master",
         "doctrine/migrations": "@dev",
         "typo3/surf": "dev-master",
         "lightwerk/surfcaptain": "dev-master",
         "lightwerk/surfclasses": "dev-master",
         "lightwerk/surfrunner": "dev-master"
      },
      "require-dev": {
         "typo3/kickstart": "2.0.*",
         "typo3/buildessentials": "2.0.*",
         "mikey179/vfsstream": "1.1.*"
      },
      "scripts": {
         "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
         "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall"
      }
}
