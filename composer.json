{
    "name": "lightwerk/surfcaptaindistribution",
    "description": "Lightwerk SurfCaptain Distribution",
    "license": ["GPL-3.0+"],
    "homepage": "https://bitbucket.org/lightwerk/surfcaptaindistribution",
    "keywords": [
        "TYPO3 Surf",
        "Deployment"
    ],
    "authors": [
        {
            "name": "Daniel Goerz",
            "role": "Developer"
        },
        {
            "name": "Achim Fritz",
            "role": "Developer"
        },
        {
            "name": "Lars Malach",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://bitbucket.org/lightwerk/surfcaptaindistribution/issues",
        "source": "https://bitbucket.org/lightwerk/surfcaptaindistribution/src"
    },
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "require": {
        "lightwerk/surfcaptain": "dev-master",
								"typo3/flow": "2.3.x-dev",
        "doctrine/migrations": "@dev",
        "typo3/surf": "dev-master",
        "lightwerk/surfrunner": "dev-master",
        "lightwerk/surftasks": "dev-master",
        "typo3/swiftmailer": "dev-master"
    },
    "require-dev": {
        "typo3/kickstart": "2.3.*",
        "typo3/buildessentials": "2.3.*",
        "phpunit/phpunit": "4.3.*",
        "mikey179/vfsstream": "1.4.*"
    },
    "suggest": {
        "ext-pdo_sqlite": "For running functional tests out-of-the-box this is required"
    },
    "scripts": {
        "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update": "TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install": "TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
